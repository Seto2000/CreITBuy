<section class="py-5">
    <div class="container">
        <h1 style="margin: 2%; text-align: center;">Add Job Request</h1>
        <div style="padding: 5%;">
            <form method="post">
                <div class="form-group">
                    <label for="theme">Theme</label>
                    
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" name="Theme" placeholder="Theme">
                        <div class="input-group-append">
                        <div class="input-group-text">
                            <i class="fa fa-comment-o contact-us-form-fa" aria-hidden="true"></i>
                        </div>
                        </div>
                        </div>
                </div>
               <div class="form-group">
                    <label for="description">Description</label>
               <div class="input-group mb-3">
                    <textarea  class="form-control" rows="6" name="Description" placeholder="Description"></textarea>
                    <div class="input-group-append">
                    <div class="input-group-text">
                        <i class="fa fa-pencil contact-us-form-fa" aria-hidden="true"></i>
                    </div>
                    </div>
                    </div>
                    </div>
               
                <button type="submit" id="submit" href="../../JobRequest/AddJobRequest?toUser=@ViewData["toUserId"]" class="btn btn-primary text-uppercase">Submit</button>
            </form>
        </div>
    </div>
</section>